{
  "name": "warcraft-gql",
  "version": "1.0.0",
  "description": "World of Warcraft GraphQL API",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "engines": {
    "node": "16.1.0"
  },
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js\"",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguelc1221/warcraft-gql.git"
  },
  "keywords": [
    "GraphQL",
    "Warcraft",
    "World of Warcraft"
  ],
  "author": "Miguel Correa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miguelc1221/warcraft-gql/issues"
  },
  "homepage": "https://github.com/miguelc1221/warcraft-gql#readme",
  "dependencies": {
    "fastify": "^3.0.0",
    "fastify-autoload": "^3.3.1",
    "fastify-cli": "^2.12.0",
    "fastify-plugin": "^3.0.0",
    "fastify-sensible": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^15.0.0",
    "@types/tap": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fastify-tsconfig": "^1.0.1",
    "prettier": "2.3.0",
    "tap": "^15.0.9",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
